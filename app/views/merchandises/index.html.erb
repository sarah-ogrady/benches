      <%= cl_image_tag merch.photo.key, width: 400, height: 300, crop: :fill, class: "news-card__image" %>
      <div class="news-card__text-wrapper p-3">
        <p class="news-card__title"><%= merch.item %></p>
        <div class="news-card__post-date">Â£<%= merch.price.round %></div>
        <div class="news-card__details-wrapper">
          <p class="news-card__excerpt"></p>
          <a href="#" class="news-card__read-more">Read more <i class="fas fa-long-arrow-alt-right"></i></a>
        </div>
      </div>
    </div>
  <% end %>
</div>
