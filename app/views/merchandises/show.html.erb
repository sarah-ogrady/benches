<%= cl_image_tag @merchandise.photo.key, width: 400, height: 300, crop: :fill %>
<p class="news-card__title"><%= @merchandise.item.capitalize %></p>
<div class="news-card__post-date"><p>Amount: <%= humanized_money_with_symbol(@merchandise.price) %></p></div>

<%= form_tag orders_path do %>
  <%= hidden_field_tag 'merchandise_id', @merchandise.id %>
  <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
<% end %>
