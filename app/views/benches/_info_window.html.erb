<div class="news-card">
  <%= link_to '', bench_path(bench), class: 'news-card__card-link' %>
  <%= cl_image_tag bench.photo.key, class: "news-card__image" %>
  <div class="news-card__text-wrapper p-3">
    <p class="news-card__title"><%= bench.dedication %></p>
    <div class="news-card__post-date">Jan 29, 2018</div>
    <div class="news-card__details-wrapper">
      <p class="news-card__excerpt"><%= bench.inscription %></p>
      <%= link_to bench_path(bench), class: " news-card__read-more" do %>
        <div class="icon-container">
          <div class="icon icon-collapse">
            <i class="fas fa-angle-double-right"></i>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
